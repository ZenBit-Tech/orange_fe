{
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 100,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react$",               
    "<THIRD_PARTY_MODULES>", 
      "^i18n$",  
    "^~/(.*)$",              
    "^[./]"                  
  ],
  "importOrderSeparation": true
}
